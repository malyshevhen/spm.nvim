# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Lua files
[*.lua]
indent_style = space
indent_size = 2
max_line_length = 100

# Lua configuration files (common patterns)
[*.luarc*]
indent_style = space
indent_size = 2

# Rockspec files (LuaRocks package specifications)
[*.rockspec]
indent_style = space
indent_size = 2

# Documentation files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files (for CI/CD, configurations)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,makefile}]
indent_style = tab
indent_size = 4
